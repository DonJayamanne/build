{
	"name": "azure-build-pipelines",
	"publisher": "donjayamanne",
	"author": {
		"name": "Don Jayamanne",
		"email": "don.jayamanne@yahoo.com"
	},
	"license": "MIT",
	"repository": {
		"type": "GitHub",
		"url": "https://github.com/DonJayamanne/build"
	},
	"bugs": {
		"url": "https://github.com/DonJayamanne/build/issues"
	},
	"displayName": "Azure Build Pipelines",
	"description": "View Azure Build Pipelines",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other",
		"Azure"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.refreshBuilds",
				"title": "Refresh",
				"icon": {
					"light": "assets/light/refresh.svg",
					"dark": "assets/dark/refresh.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "azure-pipeline-explorer",
					"title": "Azure Pipelines",
					"icon": "assets/dark/azurePipeline.svg"
				}
			]
		},
		"views": {
			"azure-pipeline-explorer": [
				{
					"id": "buildExplorer",
					"name": "Builds"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "extension.refreshBuilds",
					"when": "view == buildExplorer",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"azure-devops-node-api": "^8.0.0"
	}
}
